}
blockquote{
    font-size: 16px;
    line-height: 30px;
}
blockquote::before{

    content: '\0022';
    font-size: 50px;
    position: relative;
    color: #ff9800;
    line-height: 20px;
    bottom: -15px;
    right: 5px;
}
blockquote::after{

    content: '\0022';
    font-size: 50px;
    position: relative;
    color: #ff9800;
    line-height: 20px;
    bottom: -15px;
    left: 5px;
}
.profile:hover{
    box-shadow:  0 0 15px 15px rgba(0,0,0,0.2);
    cursor: pointer;
}
</style>
